<%= tinymce_assets %>
<% if @review.errors.any? %>
  <div class="alert alert-danger">
    <strong>Error!</strong> Could not create review.
    <% @review.errors.full_messages.each do |error| %>
      <div><%= error %></div>
    <% end %>
  </div>
<% end %>
<div class="actions">
  <%= link_to "Back", "/reviews", class: "btn btn-primary" %>
  <%= link_to '', review_path(@review.id), method: :delete, class: "glyphicon glyphicon-trash text-danger", title: "Destroy Review" unless @review.new_record? %>    
</div>
<%= form_for @review do |f| %>
  <div class="form-group">
    <%= f.label :name, 'Reviewer Name', class: "control-label" %>
    <%= f.text_field :name, class: "form-control", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :text, 'Text', class: "control-label" %>
    <%= f.text_area :text, class: "tinymce", rows: 20 %>
  </div>
  <%= tinymce %>
  <div class="form-group">
    <%= submit_tag :Save, class: "btn btn-primary", style: "width: 100%;" %>
  </div>
<% end %>