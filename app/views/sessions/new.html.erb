<div class="container">
  <%= form_tag login_path, class: "col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-12 col-xs-12" do %>
    <div class="form-group">
      <%= label_tag :email, :Email, class: "control-label" %>
      <%= text_field_tag :email, nil, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :password, :Password, class: "control-label" %>
      <%= password_field_tag :password, nil, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= submit_tag :Login, class: "btn btn-primary", style: "width: 100%;" %>
    </div>
  <% end %>
</div>