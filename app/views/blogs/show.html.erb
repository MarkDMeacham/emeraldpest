<div class="container">
  <div class="actions">
    <%= link_to "Back", blogs_path, class: "btn btn-primary" %>
    <%= link_to '', edit_blog_path(@blog.id), class: "glyphicon glyphicon-pencil", title: "Edit Blog" if current_user %>    
    <%= link_to '', blog_path(@blog.id), method: :delete, class: "glyphicon glyphicon-trash text-danger", title: "Destroy Blog" if current_user %>    
  </div>
  <div class="blog elevate-z-1">
    <h1 class="blog-title"><%= @blog.title %></h1>
    <p class="blog-date comment">Added <%= @blog.created_at.strftime("%-m/%-d/%Y") %></p>
    <div class="blog-body"><%= @blog.text.html_safe %></div>
    <% if @blog.split_tags.any? %>
      <p class="tags-container">
        <b>Tags:</b> 
        <% @blog.split_tags.each do |tag| %><%= link_to tag, "/blogs?term=#{tag}", class: "btn btn-default" %><% end %></p>
    <% end %>
  </div>
</div>