<%= tinymce_assets %>
<% if @blog.errors.any? %>
  <div class="alert alert-danger">
    <strong>Error!</strong> Could not create blog.
    <% @blog.errors.full_messages.each do |error| %>
      <div><%= error %></div>
    <% end %>
  </div>
<% end %>
<div class="actions"><%= link_to "Back", "/blogs", class: "btn btn-primary" %></div>
<%= form_for @blog do |f| %>
  <div class="form-group">
    <%= f.label :title, 'Title', class: "control-label" %>
    <%= f.text_field :title, class: "form-control", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :text, 'Text', class: "control-label" %>
    <%= f.text_area :text, class: "tinymce", rows: 20 %>
  </div>
  <%= tinymce %>
  <div class="form-group">
    <%= f.label :tags, 'Tags', class: "control-label" %>
    <%= f.text_field :tags, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= submit_tag :Save, class: "btn btn-primary", style: "width: 100%;" %>
  </div>
<% end %>